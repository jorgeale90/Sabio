{{ form_start(form) }}
<div class="card-body">
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Email <span class="required">*</span> :</label>
        <div class="col-sm-7">
            {{ form_widget(form.email, { 'attr': { 'class': 'form-control', 'required': 'required', 'placeholder': 'Nombre del País' } }) }}
        </div>
        <div class="col-2">
            {% if(form_errors(form.email)) %}
                <div class="buttons">
                    <a href="#" class="btn btn-icon btn-warning" data-container="body" data-toggle="popover" data-placement="top" data-content="{{ form_errors(form.email)  }}"><i
                                class="fas fa-exclamation-triangle"></i></a>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Password <span class="required">*</span> :</label>
        <div class="col-sm-7">
            {{ form_widget(form.password.first, { 'attr': { 'class': 'form-control', 'required': 'required', 'placeholder': 'Contraseña' } }) }}
            <small id="passwordHelpBlock" class="form-text text-muted">
                        Su contraseña debe tener entre 8 y 20 caracteres, contener letras y números, y no debe contener espacios, caracteres especiales o emoji.
            </small>
        </div>
        <div class="col-2">
            {% if(form_errors(form.password.first)) %}
                <div class="buttons">
                    <a href="#" class="btn btn-icon btn-warning" data-container="body" data-toggle="popover" data-placement="top" data-content="{{ form_errors(form.password.first)  }}"><i
                                class="fas fa-exclamation-triangle"></i></a>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Password Repeat <span class="required">*</span> :</label>
        <div class="col-sm-7">
            {{ form_widget(form.password.second, { 'attr': { 'class': 'form-control', 'required': 'required', 'placeholder': 'Contraseña' } }) }}
        </div>
        <div class="col-2">
            {% if(form_errors(form.password.second)) %}
                <div class="buttons">
                    <a href="#" class="btn btn-icon btn-warning" data-container="body" data-toggle="popover" data-placement="top" data-content="{{ form_errors(form.password.second)  }}"><i
                                class="fas fa-exclamation-triangle"></i></a>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Rol <span class="required">*</span> :</label>
        <div class="col-sm-7">
            {{ form_widget(form.roles, { 'attr': { 'class': 'form-control select2', 'required': 'required' } }) }}
        </div>
        <div class="col-2">
            {% if(form_errors(form.roles)) %}
                <div class="buttons">
                    <a href="#" class="btn btn-icon btn-warning" data-container="body" data-toggle="popover" data-placement="top" data-content="{{ form_errors(form.roles)  }}"><i
                                class="fas fa-exclamation-triangle"></i></a>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Imagen :</label>
        <div class="col-sm-7">
            {{ form_widget(form.imageFile) }}
        </div>
        <div class="col-2">
            {% if(form_errors(form.imageFile)) %}
                <div class="buttons">
                    <a href="#" class="btn btn-icon btn-warning" data-container="body" data-toggle="popover" data-placement="top" data-content="{{ form_errors(form.imageFile)  }}"><i
                                class="fas fa-exclamation-triangle"></i></a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
<div class="card-footer text-right">
    <button type="submit" class="btn btn-primary mr-2">{{ button_label|default('Añadir Usuario') }}</button>
    <a class="btn btn-light" href="{{ path('user_index') }}">Volver al Listado</a>
</div>
{{ form_end(form) }}