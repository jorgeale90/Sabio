{{ form_start(form) }}
<div class="card-body">
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">No. <span class="required">*</span> :</label>
        <div class="col-sm-7">
            {{ form_widget(form.numero, { 'attr': { 'class': 'form-control', 'required': 'required', 'placeholder': 'Número de Soporte' } }) }}
        </div>
        <div class="col-2">
            {% if(form_errors(form.numero)) %}
                <div class="buttons">
                    <a href="#" class="btn btn-icon btn-warning" data-container="body" data-toggle="popover" data-placement="top" data-content="{{ form_errors(form.numero)  }}"><i
                                class="fas fa-exclamation-triangle"></i></a>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Contenido Fundamental del Soporte <span class="required">*</span> :</label>
        <div class="col-sm-7">
            {{ form_widget(form.contenidofundamental, { 'attr': { 'class': 'form-control', 'required': 'required', 'placeholder': 'Contenido' } }) }}
        </div>
        <div class="col-2">
            {% if(form_errors(form.contenidofundamental)) %}
                <div class="buttons">
                    <a href="#" class="btn btn-icon btn-warning" data-container="body" data-toggle="popover" data-placement="top" data-content="{{ form_errors(form.contenidofundamental)  }}"><i
                                class="fas fa-exclamation-triangle"></i></a>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Nivel de Acceso <span class="required">*</span> :</label>
        <div class="col-sm-7">
            {{ form_widget(form.nivelacceso, { 'attr': { 'class': 'form-control', 'required': 'required', 'placeholder': 'Nivel de Acceso del Soporte' } }) }}
        </div>
        <div class="col-2">
            {% if(form_errors(form.nivelacceso)) %}
                <div class="buttons">
                    <a href="#" class="btn btn-icon btn-warning" data-container="body" data-toggle="popover" data-placement="top" data-content="{{ form_errors(form.nivelacceso)  }}"><i
                                class="fas fa-exclamation-triangle"></i></a>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Observaciones :</label>
        <div class="col-sm-7">
            {{ form_widget(form.observaciones, { 'attr': { 'class': 'form-control', 'placeholder': 'Observaciones' } }) }}
        </div>
        <div class="col-2">
            {% if(form_errors(form.observaciones)) %}
                <div class="buttons">
                    <a href="#" class="btn btn-icon btn-warning" data-container="body" data-toggle="popover" data-placement="top" data-content="{{ form_errors(form.observaciones)  }}"><i
                                class="fas fa-exclamation-triangle"></i></a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
<div class="card-footer text-right">
    <button type="submit" class="btn btn-primary mr-2">{{ button_label|default('Añadir Soporte') }}</button>
    <a class="btn btn-light" href="{{ path('soporte_index') }}">Volver al Listado</a>
</div>
{{ form_end(form) }}