        <div class="col-sm-7">
            {{ form_widget(form.bloque, { 'attr': { 'class': 'form-control', 'required': 'required', 'placeholder': 'Bloque del Direccionamiento IP' } }) }}
        </div>
        <div class="col-2">
            {% if(form_errors(form.bloque)) %}
                <div class="buttons">
                    <a href="#" class="btn btn-icon btn-warning" data-container="body" data-toggle="popover" data-placement="top" data-content="{{ form_errors(form.bloque)  }}"><i
