<div class="card-footer text-right">
    <button type="submit" class="btn btn-primary mr-2">{{ button_label|default('Añadir Direccionamiento IP') }}</button>
    <a class="btn btn-light" href="{{ path('direccionamientoip_index') }}">Volver al Listado</a>
</div>
{{ form_end(form) }}