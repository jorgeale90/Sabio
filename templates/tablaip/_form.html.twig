    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Imagen :</label>
        <div class="col-sm-7">
            {{ form_widget(form.imageFile) }}
            {% if direccion.imageName != null %}
                <img src="{{ vich_uploader_asset(direccion, 'imageFile', 'App\\Entity\\DireccionamientoIP') }}" width="260" height="210">
            {% endif %}
        </div>
        <div class="col-2">
            {% if(form_errors(form.imageFile)) %}
                <div class="buttons">
                    <a class="btn btn-icon btn-warning" data-container="body" data-toggle="popover" data-placement="top" data-content="{{ form_errors(form.imageFile)  }}"><i
                                class="fas fa-exclamation-triangle"></i></a>
                </div>
            {% endif %}
        </div>
    </div>
