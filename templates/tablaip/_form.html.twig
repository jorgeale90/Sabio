    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Dirección de Enlace <span class="required">*</span> :</label>
        <div class="col-sm-7">
            {{ form_widget(form.direccionenlace, { 'attr': { 'class': 'form-control', 'required': 'required', 'placeholder': 'Dirección del Enlace' } }) }}
        </div>
        <div class="col-2">
            {% if(form_errors(form.direccionenlace)) %}
                <div class="buttons">
                    <a href="#" class="btn btn-icon btn-warning" data-container="body" data-toggle="popover" data-placement="top" data-content="{{ form_errors(form.direccionenlace)  }}"><i
