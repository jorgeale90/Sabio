    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Puerta de Enlace <span class="required">*</span> :</label>
        <div class="col-sm-7">
            {{ form_widget(form.puertaenlace, { 'attr': { 'class': 'form-control', 'required': 'required', 'placeholder': 'Puerto de Enlace' } }) }}
        </div>
        <div class="col-2">
            {% if(form_errors(form.puertaenlace)) %}
                <div class="buttons">
                    <a href="#" class="btn btn-icon btn-warning" data-container="body" data-toggle="popover" data-placement="top" data-content="{{ form_errors(form.puertaenlace)  }}"><i
                                class="fas fa-exclamation-triangle"></i></a>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Tabla de Direccrionamiento IP :</label>
        <div class="col-sm-7">
            <ul class=tablaip data-prototype="{{ form_widget(form.tablaip.vars.prototype)|e }}" data-widget-tags="{{ '<li></li>'|e }}">
                {% for param in form.tablaip %}
                    <li>
                        {{ form_errors(param) }}
                        <div class="form-group">
                            {{ form_row(param.departamento) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(param.ip) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(param.mac) }}
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Dirección Disponibles :</label>
        <div class="col-sm-7">
            {{ form_widget(form.direccionesdisponibles, { 'attr': { 'class': 'form-control', 'placeholder': 'Dirección del Enlace' } }) }}
        </div>
        <div class="col-2">
            {% if(form_errors(form.direccionesdisponibles)) %}
                <div class="buttons">
                    <a href="#" class="btn btn-icon btn-warning" data-container="body" data-toggle="popover" data-placement="top" data-content="{{ form_errors(form.direccionesdisponibles)  }}"><i
