{{ form_start(form) }}
<div class="card-body">
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">No. <span class="required">*</span> :</label>
        <div class="col-sm-7">
            {{ form_widget(form.numero, { 'attr': { 'class': 'form-control', 'required': 'required', 'placeholder': 'Número' } }) }}
        </div>
        <div class="col-2">
            {% if(form_errors(form.numero)) %}
                <div class="buttons">
                    <a href="#" class="btn btn-icon btn-warning" data-container="body" data-toggle="popover" data-placement="top" data-content="{{ form_errors(form.numero)  }}"><i
                                class="fas fa-exclamation-triangle"></i></a>
                </div>
            {% endif %}
