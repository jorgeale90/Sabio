{% extends 'base-dashboard.html.twig' %}
{% block title %}Mostrar Personal Entidad{% endblock %}
{% block body %}
    <div class="col-12">
    {% if entity.esDenegar == true %}<div class="card card-danger">{% else %}<div class="card">{% endif %}
            <div class="card-header">
                <h4><strong>Mostrar</strong> Personal Médico</h4>{% if entity.esDenegar == true %}<span> Acceso Restringido</span>{% endif %}
            </div>
            <div class="card-body">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">CI <span class="required">*</span> :</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.ci, { 'attr': { 'class': 'form-control', 'readonly': 'readonly' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">No. Registro <span class="required">*</span> :</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.noregistro, { 'attr': { 'class': 'form-control', 'readonly': 'readonly' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Nombre <span class="required">*</span> :</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.nombre, { 'attr': { 'class': 'form-control', 'readonly': 'readonly' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Apellidos <span class="required">*</span> :</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.apellidos, { 'attr': { 'class': 'form-control', 'readonly': 'readonly' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Sexo <span class="required">*</span> :</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.sexo, { 'attr': { 'class': 'form-control select2', 'readonly': 'readonly', 'disabled': 'disabled' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Nacionalidad <span class="required">*</span> :</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.nacionalidad, { 'attr': { 'class': 'form-control select2', 'readonly': 'readonly', 'disabled': 'disabled' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Dirección Particular :</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.direccionparticular, { 'attr': { 'class': 'form-control', 'readonly': 'readonly' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Teléfono Fijo :</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.telefonofijo, { 'attr': { 'class': 'form-control', 'readonly': 'readonly' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Móvil :</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.movil, { 'attr': { 'class': 'form-control', 'readonly': 'readonly' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Correo Electrónico :</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.email, { 'attr': { 'class': 'form-control', 'readonly': 'readonly' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Autobliografía :</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.autobliografia, { 'attr': { 'class': 'form-control', 'readonly': 'readonly' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Organización Política <span class="required">*</span> :</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.organizacionpolitica, { 'attr': { 'disabled': 'disabled', 'readonly': 'readonly' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Cargo u Ocupación <span class="required">*</span> :</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.cargo, { 'attr': { 'class': 'form-control select2', 'readonly': 'readonly', 'disabled': 'disabled' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Especialidad <span class="required">*</span> :</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.especialidad, { 'attr': { 'class': 'form-control select2', 'readonly': 'readonly', 'disabled': 'disabled' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Categoría Docente <span class="required">*</span> :</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.categoriadocente, { 'attr': { 'class': 'form-control select2', 'readonly': 'readonly', 'disabled': 'disabled' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Categoría Científica <span class="required">*</span> :</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.categoriacientifica, { 'attr': { 'class': 'form-control select2', 'readonly': 'readonly', 'disabled': 'disabled' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Misión <span class="required">*</span> :</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.mision, { 'attr': { 'class': 'form-control select2', 'readonly': 'readonly', 'disabled': 'disabled' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Imagen :</label>
                    <div class="col-sm-7">
                        {% if entity.imageName != null %}
                            <img src="{{ vich_uploader_asset(entity, 'imageFile', 'App\\Entity\\PersonalMedico') }}" width="260" height="210">
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="card-footer text-right">
                <a class="btn btn-light" href="{{ path('personalmedico_index') }}">Volver al Listado</a>
            </div>
        </div>
    </div>
{% endblock %}